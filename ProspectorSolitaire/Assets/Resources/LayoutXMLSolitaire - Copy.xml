<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1.25" y="1.5" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets which column it is -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!-- Column1 -->
	<slot id="0" x="-8" y="3" faceup="1" layer="0" />

  <!-- Column2 -->
  <slot id="1" x="-5" y="3" faceup="0" layer="1" hiddenby="2" />
  <slot id="2" x="-5" y="1.5" faceup="1" layer="1" />

  <!-- Column3 -->
  <slot id="3" x="-2" y="3" faceup="0" layer="2" hiddenby="4" />
  <slot id="4" x="-2" y="1.5" faceup="0" layer="2" hiddenby="5" />
  <slot id="5" x="-2" y="0" faceup="1" layer="2" />

  <!-- Column4 -->
  <slot id="6" x="1" y="3" faceup="0" layer="3" hiddenby="7" />
  <slot id="7" x="1" y="1.5" faceup="0" layer="3" hiddenby="8" />
  <slot id="8" x="1" y="0" faceup="0" layer="3" hiddenby="9" />
  <slot id="9" x="1" y="-1.5" faceup="1" layer="3" />

  <!-- Column5 -->
  <slot id="10" x="4" y="3" faceup="0" layer="4" hiddenby="11" />
  <slot id="11" x="4" y="1.5" faceup="0" layer="4" hiddenby="12" />
  <slot id="12" x="4" y="0" faceup="0" layer="4" hiddenby="13" />
  <slot id="13" x="4" y="-1.5" faceup="0" layer="4" hiddenby="14" />
  <slot id="14" x="4" y="-3" faceup="1" layer="4" />

  <!-- Column6 -->
  <slot id="15" x="7" y="3" faceup="0" layer="5" hiddenby="16" />
  <slot id="16" x="7" y="1.5" faceup="0" layer="5" hiddenby="17" />
  <slot id="17" x="7" y="0" faceup="0" layer="5" hiddenby="18" />
  <slot id="18" x="7" y="-1.5" faceup="0" layer="5" hiddenby="19" />
  <slot id="19" x="7" y="-3" faceup="0" layer="5" hiddenby="20" />
  <slot id="20" x="7" y="-4.5" faceup="1" layer="5" />

  <!-- Column7 -->
  <slot id="21" x="10" y="3" faceup="0" layer="6" hiddenby="22" />
  <slot id="22" x="10" y="1.5" faceup="0" layer="6" hiddenby="23" />
  <slot id="23" x="10" y="0" faceup="0" layer="6" hiddenby="24" />
  <slot id="24" x="10" y="-1.5" faceup="0" layer="6" hiddenby="25" />
  <slot id="25" x="10" y="-3" faceup="0" layer="6" hiddenby="26" />
  <slot id="26" x="10" y="-4.5" faceup="0" layer="6" hiddenby="27" />
  <slot id="27" x="10" y="-6" faceup="1" layer="6" />

  <!-- This positions the deck pile and staggers it -->
	<slot type="drawpile" x="-11.5" y="7.75" xstagger="0.15" layer="7"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="-11.5" y="3" layer="8"/>

  <!-- The position of the aces on top -->
  <slot type="aces" x="-6.5" y="7.75" layer="9" />
  <slot type="aces" x="-2.5" y="7.75" layer="9" />
  <slot type="aces" x="1.5" y="7.75" layer="9" />
  <slot type="aces" x="5.5" y="7.75" layer="9" />
	
</xml>
	